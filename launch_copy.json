    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mysite/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "http://127.0.0.1:8000",
                "uriFormat": "http://127.0.0.1:8000",
                "webRoot": "${workspaceFolder}/mysite/manage.py"
            },
            "env": {
                "SECRET_KEY": "<see_password_manager>",
            }
        }
    ]
}